10  'THIS PROGRAM DEFINES THE GRAPHICS MODE AND WHETHER THE SCREEN IS COLOR
20  'OR MONOCHROME.  THIS INFORMATION IS STORED IN DEVICE.DAT.
30 CLS
40 COLOR 15,1
50 CLS
60 LOCATE 2,33:PRINT "A F T O X"
70 LOCATE 4,18: PRINT "AIR FORCE TOXIC CHEMICAL DISPERSION MODEL"
80 LOCATE 6,26: PRINT "SET UP FOR GRAPHICS PROGRAM"
90 LOCATE 9,13: PRINT "Enter code for graphics card/monitor type."
100 LOCATE 11,14: INPUT "E = EGA/VGA   C = CGA    N = No graphics   ";EC$
130 IF EC$="E" OR EC$="e" THEN EGA=1: GOTO 162
140 IF EC$="C" OR EC$="c" THEN EGA=0: GOTO 162
150 IF EC$="N" OR EC$="n" THEN EGA=2: GOTO 162
160 PRINT CHR$(7): GOTO 100 
162 LOCATE 14,13: PRINT "Enter code for monitor type."
164 LOCATE 16,25: INPUT "C = COLOR     M = MONOCHROME    ";SC$
170 IF SC$="C" OR SC$="c" THEN SCR=1: GOTO 200
180 IF SC$="M" OR SC$="m" THEN SCR=0: GOTO 200
190 PRINT CHR$(7): GOTO 162
200 OPEN "O",#1, "DEVICE.DAT"
210 PRINT #1, EGA, SCR
220 CLOSE #1
230 END
